<% layout('layouts/dashboard') -%>
<% block('title', 'Driver List') -%>

<h2 class="text-2xl font-semibold text-foreground mb-6">Driver List</h2>
<div class="bg-card shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-muted/50">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Email</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Profile Status</th>
                <th scope="col" class="relative px-6 py-3">
                    <span class="sr-only">View</span>
                </th>
            </tr>
        </thead>
        <tbody class="bg-card divide-y divide-gray-200">
            <% drivers.forEach(driver => { %>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-card-foreground"><%= driver.name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground"><%= driver.email %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <% if (driver.profileComplete) { %>
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Complete</span>
                        <% } else { %>
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Incomplete</span>
                        <% } %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="/dashboard/operator/user/<%= driver._id %>" class="text-primary hover:text-primary/90">View Profile</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>