<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Driver Dashboard - RouteSync</title>
  <link rel="stylesheet" href="/style.css"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="container">
    <aside class="sidebar">
      <div class="profile">
        <div class="avatar"></div>
        <h2><%= user.name %></h2>
        <p><%= user.email %></p>
      </div>
      <nav>
        <a href="#" class="active">Dashboard</a>
        <a href="#">Vehicle Info</a>
        <a href="#">Attendance</a>
        <a href="/logout" class="logout-link">Logout</a>
      </nav>
    </aside>

    <main class="main-content">
      <h1>Today's Route</h1>

      <div class="cards">
        <div class="card">
          <h3>Cab Details</h3>
          <p>Hyundai i20</p>
          <p>Capacity: 4</p>
          <p>Status: âœ… Good</p>
        </div>
        <div class="card">
          <h3>Late This Month</h3>
          <canvas id="lateChart" width="200" height="120"></canvas>
        </div>
      </div>

      <div class="card large">
        <h3>Student Pickup List</h3>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Location</th>
              <th>Call</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Aarav Mehta</td>
              <td>Vaishali Nagar</td>
              <td><a href="tel:+910123456789">ðŸ“ž</a></td>
            </tr>
            <tr>
              <td>Isha Singh</td>
              <td>Malviya Nagar</td>
              <td><a href="tel:+919876543210">ðŸ“ž</a></td>
            </tr>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <script>
    const ctx = document.getElementById("lateChart").getContext("2d");
    new Chart(ctx, {
      type: "bar",
      data: {
        labels: ["Jan", "Feb", "Mar", "Apr"],
        datasets: [{
          label: "Late Count",
          data: [0, 2, 1, 3],
          backgroundColor: "#00b894"
        }]
      },
      options: {
        plugins: { legend: { display: false } },
        scales: {
          x: { ticks: { color: "#333" } },
          y: { ticks: { color: "#333" } }
        }
      }
    });
  </script>


</body>
</html>
